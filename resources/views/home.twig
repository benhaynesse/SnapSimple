{% extends 'templates/app.twig' %} {# Override For App.twig #} {% block content %} {# Title Display #}



{% include 'templates/partials/slide-in-nav.twig' %}
<h2 class="text-center">Index Page</h2>

<div class="well text-center">    

    <h4 class="text-primary">Sort By</h4>

      <div class="btn-group btn-group-justified">
        <div class="btn-group">
          <button type="button" class="btn btn-info">Location</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-info">Popular</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-info">Recent</button>
        </div>
      </div>

</div>


<div class="container">
    <div class="row align-items-center">

        {% for user in posts %} {% include 'templates/profiles/grid-profile.twig' with {'user' : user} %} {% endfor %}

    </div>
</div> 




{# Pagionation Display #}

<div class="row">
    
        {% if pagination.needed %}
        <div  class="text-center">
            {% for i in 1..pagination.lastpage %}
            <a class="pag {% if i == pagination.page %}active{% endif %}" href="?page={{ i }}">{{ i }}</a>
            {% endfor %}
        </div>
        {% endif %}
    
</div>


<script>

    if (window.location.hash == '#_=_') {
        window.location.hash = ''; // for older browsers, leaves a # behind
        history.pushState('', document.title, window.location.pathname); // nice and clean        
    }

</script>
{% endblock %}