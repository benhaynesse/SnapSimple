{% extends 'templates/app.twig' %} {# Override For App.twig #} {% block content %} {# Title Display #}



<style>
    .heading {
        margin: 15px auto 15px auto;
        background: #222222;
        border-radius: 12px;
    }

    .thumbnail {
        padding: 0;
    }
</style>



<div class="container">

    <div class="row heading">
        <h5 class="text-center">Categories</h5>
    </div>

    <div class="col-xs-6 col-md-3">
        <div class="thumbnail" style="background:red">
            <img src="http://via.placeholder.com/150x100" alt="">
        </div>
    </div>
    <div class="col-xs-6 col-md-3">
        <div class="thumbnail" style="background:orange">
            <img src="http://via.placeholder.com/150x100" alt="">
        </div>
    </div>
    <div class="col-xs-6 col-md-3">
        <div class="thumbnail" style="background:aqua">
            <img src="http://via.placeholder.com/150x100" alt="">
        </div>
    </div>
    <div class="col-xs-6 col-md-3">
        <div class="thumbnail" style="background:purple">
            <img src="http://via.placeholder.com/150x100" alt="">
        </div>
    </div>

</div>




<div class="container profiles">

    <div class="row heading">
        <h5 class="text-center">Most Popular Users</h5>
    </div>

    {% for i, post in posts.popular %} {% include 'templates/profiles/post-profile.twig' with {'post': post} %} {% endfor %}

    <button type="submit" class="btn btn-info btn-block">View More</button>

</div>



<div class="container profiles">

    <div class="row heading">
        <h5 class="text-center">Most Recent Users</h5>
    </div>

    {% for i, post in posts.recent %} {% include 'templates/profiles/post-profile.twig' with {'post': post} %} {% endfor %}

    <button type="submit" class="btn btn-info btn-block">View More</button>

</div>


<script>

    if (window.location.hash == '#_=_') {
        window.location.hash = ''; // for older browsers, leaves a # behind
        history.pushState('', document.title, window.location.pathname); // nice and clean        
    }

</script> {% endblock %}