<div class="row">
    <div class="col-md-12">

        <div class="panel panel-info">
            <div class="panel-heading">Add Post</div>
            <div class="panel-body">

                <form action={{path_for( 'post.add')}} method="POST" enctype="multipart/form-data">

                    <div class="form-group {{errors.username ? 'has-error'}}">
                        <label for="headline">Username</label>
                        <input class="form-control" type="text" name="username" id="username" value="{{old.username}}" placeholder="Enter Your Username">
                        {% if errors.username %}
                        <span class="help-block">{{errors.username | first}}</span>
                        {% endif %}
                    </div>

                    <div class="form-group {{errors.headline ? 'has-error'}}">
                        <label for="headline">Headline</label>
                        <input class="form-control" type="text" name="headline" id="headline" value="{{old.headline}}" placeholder="Enter Your Post Title">
                        {% if errors.headline %}
                        <span class="help-block">{{errors.headline | first}}</span>
                        {% endif %}
                    </div>


                    <div class="form-group {{errors.image ? 'has-error'}}">
                        {% include 'post/components/image-preview.twig' %}
                    </div>                    
                  

                    <div class="form-group">
                        <label for="looking">What are you looking for?</label>
                        <select class="form-control" id="looking" name="looking">
                                {% set options = ['Followers', 'Chats', 'Fun', 'Selling'] %}
                                {% for opt in options %}
                                    {% if old.looking == loop.index %}
                                        <option selected value="{{loop.index}}">{{opt}}</option>
                                    {% else %}
                                        <option value="{{loop.index}}">{{opt}}</option>
                                    {% endif %}
                                {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="comments">Who can comment on your post</label>
                        <select class="form-control" id="comments" name="comments">
                                {% set options = ['Everyone', 'Members', 'No-one'] %}
                                {% for opt in options %}
                                    {% if old.looking == loop.index %}
                                        <option selected value="{{loop.index}}">{{opt}}</option>
                                    {% else %}
                                        <option value="{{loop.index}}">{{opt}}</option>
                                    {% endif %}
                                {% endfor %}                            
                        </select>
                    </div>

                    <!-- Include Map Along with its js -->
                    <div class="form-group">
                        {% include 'post/components/map.twig' %}
                    </div>

                    <button type="submit" class="btn btn-info btn-block">Add Post</button>

                </form>
                <!--End Of Form -->

            </div>
            <!-- End of panel body -->
        </div>
        <!-- End of Panel -->


    </div>
    <!-- End of sizing container -->
</div>
<!-- End of Row -->





{% endblock %}